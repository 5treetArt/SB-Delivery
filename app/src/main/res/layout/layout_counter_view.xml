<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_dark"
        android:paddingTop="@dimen/spacing_tiny_4"
        android:paddingBottom="@dimen/spacing_tiny_4"
        android:focusable="true"
        android:focusableInTouchMode="true">

    <ImageButton
            android:id="@+id/btn_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_tiny_4"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_value"/>

    <!--TODO IMPROVEMENT: Add views programmatically and calculate its size-->
    <EditText
            android:id="@+id/et_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_tiny_4"
            android:layout_marginEnd="@dimen/spacing_tiny_4"
            android:minWidth="44dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="number|numberDecimal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_dec"
            app:layout_constraintRight_toLeftOf="@id/btn_inc"
            tools:text="1"
            tools:textColor="@android:color/white"/>

    <ImageButton
            android:id="@+id/btn_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/spacing_tiny_4"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>